<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.glasshouse.daily</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Users/mabramsky/glasshouse/scripts/daily_run.sh</string>
    </array>

    <!-- Run daily at 7:00 AM -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>7</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <key>StandardOutPath</key>
    <string>/Users/mabramsky/glasshouse/logs/launchd_daily.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/mabramsky/glasshouse/logs/launchd_daily_error.log</string>

    <key>WorkingDirectory</key>
    <string>/Users/mabramsky/glasshouse</string>

    <!-- Run missed jobs when waking from sleep -->
    <key>StartInterval</key>
    <integer>86400</integer>
</dict>
</plist>
